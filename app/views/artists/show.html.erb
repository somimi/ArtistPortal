	<p>
	  <strong>Shipping Address Line1:</strong>
	  <%= @artist.shipping_address_line1 %>
	</p>
	<p>
	  <strong>Shipping Address Line2:</strong>
	  <%= @artist.shipping_address_line2 %>
	</p>
	<p>
	  <strong>Shipping City:</strong>
	  <%= @artist.shipping_city %>
	</p>
	<p>
	  <strong>Shipping State:</strong>
	  <%= @artist.shipping_state %>
	</p>
	<p>
	  <strong>Shipping Zip:</strong>
	  <%= @artist.shipping_zip %>
	</p>
	<p>
	  <strong>Shipping Country:</strong>
	  <%= @artist.shipping_country %>
	</p>
<% end %>
<p>
  <strong>Shipping Account:</strong>
  <%= @artist.shipping_account %>
</p>
<p>
  <strong>Bio:</strong>
  <%= @artist.bio %>
</p>
<p>
  <strong>Require Representation:</strong>
  <%= @artist.require_representation %>
</p>
Visual Submissions<br />
<table border="1" bordercolor="FFCC00" style="background-color:FFFFCC" cellpadding="3" cellspacing="3">
	<tr>
		<th>Title</th>
		<th>Acceptance Status</th>
	</tr>
	<% for visual_submission in @visual_submissions %>
	<tr>
		<td><%= link_to visual_submission.title, visual_submission_path(visual_submission) %></td>
		<td><%= link_to visual_submission.acceptance_status, visual_submission_path(visual_submission) %></td>
	</tr>
	<% end %>
</table>

<br />
Store Submissions<br />
<table border="1" bordercolor="FFCC00" style="background-color:FFFFCC" cellpadding="3" cellspacing="3">
	<tr>
		<th>Title</th>
	</tr>
	<% for store_submission in @store_submissions %>
	<tr>
		<td><%= link_to store_submission.title, store_submission_path(store_submission) %></td>
	</tr>
	<% end %>
</table>
<p>
  <%= link_to "Edit", edit_artist_path(@artist) %> |
  <%= link_to "Delete", @artist, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", artists_path %>
</p>
