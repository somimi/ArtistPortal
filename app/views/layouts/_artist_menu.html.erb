<% if !current_user.artist %>
  <p><%= link_to "Add Profile", new_artist_path %></p>
<% else %>
  <p><%= link_to "Edit Profile", edit_artist_path(current_user.artist) %></p>
<% end %>

<% if current_user.artist %>
  <% if current_user.artist.visual_paid? or !current_user.artist.north_america? %>
    <p><%= link_to "Visual Art", visual_submissions_path %></p>
  <% else  %>
    <%= form_tag APP_CONFIG[:paypal_url] do %>
      <%= hidden_field_tag :cmd, "_s-xclick" %>
      <%= hidden_field_tag :encrypted, current_user.paypal_visual_encrypted(visual_submissions_url, payment_notifications_url(:secret => APP_CONFIG[:paypal_secret])) %>
      <p><%= link_to_submit 'Pay To Submit Visual Art' %></p>
    <% end %>
  <% end %>

  <% if current_user.artist.literary_paid? or !current_user.artist.north_america? %>
    <p><%= link_to "Literary Art", literary_submissions_path %></p>
  <% else %>
    <%= form_tag APP_CONFIG[:paypal_url] do %>
      <%= hidden_field_tag :cmd, "_s-xclick" %>
      <%= hidden_field_tag :encrypted, current_user.paypal_literary_encrypted(literary_submissions_url, payment_notifications_url(:secret => APP_CONFIG[:paypal_secret])) %>
      <p><%= link_to_submit "Pay To Submit Literary Art" %></p>
    <% end %>
  <% end %>

  <% if current_user.artist.film_paid? or !current_user.artist.north_america? %>
    <p><%= link_to "Video/Short Film", film_submissions_path %></p>
  <% else %>
    <%= form_tag APP_CONFIG[:paypal_url] do %>
      <%= hidden_field_tag :cmd, "_s-xclick" %>
      <%= hidden_field_tag :encrypted, current_user.paypal_film_encrypted(film_submissions_url, payment_notifications_url(:secret => APP_CONFIG[:paypal_secret])) %>
      <p><%= link_to_submit "Pay To Submit Short Film" %></p>
    <% end %>
  <% end %>

  <% if current_user.artist.installation_paid? or !current_user.artist.north_america? %>
    <p><%= link_to "Installation Submissions", installation_submissions_path %></p>
  <% else %>
    <%= form_tag APP_CONFIG[:paypal_url] do %>
      <%= hidden_field_tag :cmd, "_s-xclick" %>
      <%= hidden_field_tag :encrypted, current_user.paypal_installation_encrypted(installation_submissions_url, payment_notifications_url(:secret => APP_CONFIG[:paypal_secret])) %>
      <p><%= link_to_submit "Pay To Submit Installations" %></p>
    <% end %>
  <% end %>

  <% if current_user.artist.visual_paid? or current_user.artist.store_paid %>
    <p><%= link_to "Store Art", store_submissions_path %></p>
  <% else  %>
    <%= form_tag APP_CONFIG[:paypal_url] do %>
      <%= hidden_field_tag :cmd, "_s-xclick" %>
      <%= hidden_field_tag :encrypted, current_user.paypal_store_encrypted(store_submissions_url, payment_notifications_url(:secret => APP_CONFIG[:paypal_secret])) %>
      <p><%= link_to_submit 'Pay To Submit Store Art' %></p>
    <% end %>
  <% end %>

  <p><%= link_to "Performance Submissions", performance_submissions_path %></p>
  <p><%= link_to "DJ Submissions", dj_submissions_path %></p>
<% end %> 

