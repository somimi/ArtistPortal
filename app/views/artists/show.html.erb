<% if @visual_submissions.count > 0 %>
	Visual Submissions<br />
	<table id="artist-visual-index" class="display">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Acceptance Status</th>
				<th>Art Recvd</th>
			</tr>
	    </thead>
		<tbody>
		<% for visual_submission in @visual_submissions %>
		<tr>
			<td><%= link_to visual_submission.id, visual_submission_path(visual_submission) %></td>
			<td><%= link_to visual_submission.title, visual_submission_path(visual_submission) %></td>
			<td><%= link_to visual_submission.acceptance_status, visual_submission_path(visual_submission) %></td>
			<td><%= visual_submission.received</td>
		  
		</tr>
		<% end %>
		</tbody>
	</table>
<% end %>

<br />
<% if @store_submissions.count > 0 %>
	Store Submissions<br />
	<table id="artist-store-index" class="display">
		<thead>
			<tr>
				<th>Title</th>
			</tr>
		</thead>
		<tbody>
			<% for store_submission in @store_submissions %>
			<tr>
				<td><%= link_to store_submission.title, store_submission_path(store_submission) %></td>
			</tr>
		</tbody>
		<% end %>
	</table>
<% end %>
<p>
  <%= link_to "Edit", edit_artist_path(@artist) %> |
  <%= link_to "Delete", @artist, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", artists_path %>
</p>
