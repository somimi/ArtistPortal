<%= form_for @artist do |f| %>
  <%= render "shared/error_messages", :target => @artist %>
<fieldset>
	<legend>Personal Information</legend>
	  <div class="notes">
	      <h4>Personal Information</h4>
	      <p class="last">Professional name is the name that is published on the website, the walls of the exhibition and the festival catalog</p>
      </div>
	  <div>
	    <%= f.label "Legal First Name" %>
	    <%= f.text_field :first_name %>
	  </div>
	  <div>
	    <%= f.label "Legal Last Name" %>
	    <%= f.text_field :last_name %>
	  </div>
	  <div>
	    <%= f.label :professional_name %>
	    <%= f.text_field :professional_name %>
	  </div>
	  <div>
	    <%= f.label :bio %>
	    <%= f.text_area :bio, :maxlength => "300" %>
	    <p>
		<small style="float:right;">Maximum length 300 characters</small>
		</p>
	  </div><br />
	  <!-- <div class="notes">
	      <h4>Require Representation</h4>
	      <p class="last">By checking this box, you are authorizing your gallery, dealer, or agent to negotiate and share information with the Festival on your behalf. Please only choose this option if you would like the Festival’s staff to interact with this person instead of with you.</p>
      </div> -->
	  <div>
		<%= f.check_box :require_representation, :id => "represent-check" %>
        <%= f.label :require_representation %>
	     <a href="#?w=500" rel="popup_represent" class="poplight">Learn More</a>
	  </div>
	<br />
	<div id="represent">
	  <fieldset>
		<legend>Representative Information</legend>
	  </fieldset>
	</div>
</fieldset>
<fieldset>
	<legend>Contact Information</legend>
	<div class="notes">
      <h4>Contact Information</h4>
      <p class="last">This is the address we use for correspondence. This address can be a PO Box</p>
     </div>
	<div>
	  <%= f.label :email %>
	  <%= f.text_field :email, :value => @artist.email ||= current_user.email %>
	</div>
	<div>
	  <%= f.label :email %>
	  <%= f.text_field :email_confirmation %>
	</div>
	<div>
	  <%= f.label :phone %>
	  <%= f.text_field :phone %>
	</div>
	  <div>
	    <%= f.label "Address Line 1" %>
	    <%= f.text_field :mailing_address_line1 %>
	  </div>
	  <div>
	    <%= f.label "Address Line 2" %>
	    <%= f.text_field :mailing_address_line2 %>
	  </div>
	  <div>
	    <%= f.label "City" %>
	    <%= f.text_field :mailing_city %>
	  </div>
	  <div>
	    <%= f.label "State/Province" %>
	    <%= f.text_field :mailing_state %>
	  </div>
	  <div>
	    <%= f.label "Zip Code" %>
	    <%= f.text_field :mailing_zip %>
	  </div>
	  <div>
	    <%= f.label "Country" %>
	    <%= f.country_select :mailing_country, ["United States"] %>
	  </div>
</fieldset>
  <p>
	<%= f.check_box :shipping_same_as_mail, :id => "shipping-check" %>
    <%= f.label :shipping_same_as_mail %>
    
  </p>
<fieldset id="shipping-address">
	<legend>Shipping Address</legend>
	<div class="notes">
      <h4>Shipping Address</h4>
      <p class="last">This is where we will be returning your art if it needs to be shipped.  This cannot be a PO Box.</p>
     </div>
	  <div>
	    <%= f.label "Address Line 1" %>
	    <%= f.text_field :shipping_address_line1 %>
	    <small>Cannot be a PO box</small>
	  </div>
	  <div>
	    <%= f.label "Address Line 2" %>
	    <%= f.text_field :shipping_address_line2 %>
	  </div>
	  <div>
	    <%= f.label "City" %>
	    <%= f.text_field :shipping_city %>
	  </div>
	  <div>
	    <%= f.label "Zip" %>
	    <%= f.text_field :shipping_zip %>
	  </div>
	  <div>
	    <%= f.label "State/Province" %>
	    <%= f.text_field :shipping_state %>
	  </div>
	  <div>
	    <%= f.label "Country" %>
	    <%= f.country_select :shipping_country, ["United States"] %>
	  </div>
</fieldset>
<fieldset>
	<legend>Delivery/Return Arrangements</legend>
	  <div class="notes">
	      <h4>Return Information</h4>
	      <p class="last">Note that if no return shipping label is provided and no one picks up the art, it will be considered a donation to the Foundation for Sex Positive Culture, producer of the Festival.</p>
	      <br />
		  <p class="last">Note that shipping labels are not billed until the label is scanned and processed for return shipping, so if your art sells and there is no return, there is no charge.</p>
    </div>
	   <div>
		 <%= f.label "Delivery Arrangements" %>
		 <%= f.select(:delivery_arrangements, options_for_select([["Drop off work in person (the artist, or an authorized person)"], ['Ship work with carrier of your choice']], @artist.delivery_arrangements), {:include_blank => true, :width => "200px"}) %>
		 <small><i>Delivery address is NOT at Fremont Studios.</i></small>
	   </div>
	   <div>
		<%= f.label "Return Arrangements" %>
		<%= f.select(:return_arrangements, options_for_select([["Pick up work in person (the artist, or an authorized person)"], ['Include a return shipping label with the original shipment of art (with the carrier of your choice).'],['Donate any unsold items to the Foundation']], @artist.return_arrangements), {:include_blank => true, :width => "200px"}) %>	
	   </div>
	   <div>
		<%= f.label :shipping_company %>
		<%= f.select(:shipping_company, options_for_select([['Federal Express', 'Federal Express'], ['UPS', 'UPS'], ['USPS', 'USPS'], ['Fly By Night', 'Fly By Night']], @artist.shipping_company), {:include_blank => true, :width => "200px"}) %>
		   <a href="#?w=500" rel="popup_shipping" class="poplight">Learn More</a>
	   </div>
	   <div>
	    <%= f.label "Shipping Account Number" %>
	    <%= f.text_field :shipping_account %>
	  </div>
</fieldset>
  <p>
	<% if current_user.is_admin? %>
	  <p>
		<%= f.label :literary_paid %><br />
		<%= f.check_box :literary_paid %>
	  </p>
	  <p>
		<%= f.label :visual_paid %><br />
		<%= f.check_box :visual_paid %>
	  </p>
	<% end %>
		<%= f.submit "Save Profile" %></p>
<% end %>


<div id="popup_shipping" class="popup_block">
    <h2>Shipping Company</h2>
    <p>This is a lot of stuff that I don't know how to answer but should go in this box.</p>
</div>

<div id="popup_represent" class="popup_block">
    <h2>Require Representation</h2>
    <p>By checking this box, you are authorizing your gallery, dealer, or agent to negotiate and share information with the Festival on your behalf. Please only choose this option if you would like the Festival’s staff to interact with this person instead of with you.</p>
</div>
